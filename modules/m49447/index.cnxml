<note id="eip-687" class="precalculus try">
<label>Ejercicio</label>
<exercise id="ti_11_04_04">
<problem id="fs-id1165137651940">
<para id="eip-id2303118"> <m:math>
<m:mrow>
<m:mstyle displaystyle="true">
<m:munderover>
<m:mo>∑</m:mo>
<m:mrow>
<m:mi>k</m:mi><m:mo>=</m:mo><m:mn>1</m:mn>
</m:mrow>
<m:mrow>
<m:mn>10</m:mn>
</m:mrow>
</m:munderover>
