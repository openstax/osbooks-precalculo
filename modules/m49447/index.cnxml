<m:mrow>
<m:msup>
<m:mi>k</m:mi>
<m:mn>2</m:mn>
</m:msup>

</m:mrow>
</m:mstyle>
</m:mrow>
</m:mtd>
<m:mtd columnalign="left">
<m:mrow>
<m:mo>=</m:mo><m:msup>
<m:mn>3</m:mn>
<m:mn>2 </m:mn>
</m:msup>
<m:mo>+</m:mo><m:msup>
<m:mn>4</m:mn>
<m:mn>2</m:mn>
</m:msup>
<m:mo>+</m:mo><m:msup>
<m:mn>5</m:mn>
<m:mn>2</m:mn>
</m:msup>
<m:mo>+</m:mo><m:msup>
<m:mn>6</m:mn>
<m:mn>2</m:mn>
</m:msup>
