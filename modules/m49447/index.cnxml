      <m:mn>1</m:mn><m:mo>-</m:mo><m:msup>
       <m:mrow>
        <m:mrow><m:mo>(</m:mo>
         <m:mrow>
          <m:mfrac>
           <m:mn>1</m:mn>
           <m:mn>3</m:mn>
          </m:mfrac>

         </m:mrow>
        <m:mo>)</m:mo></m:mrow>
       </m:mrow>
       <m:mn>5</m:mn>
      </m:msup>

     </m:mrow>
    <m:mo>)</m:mo></m:mrow>
   </m:mrow>
   <m:mrow>
    <m:mn>1</m:mn><m:mo>-</m:mo><m:mfrac>
     <m:mn>1</m:mn>
     <m:mn>3</m:mn>
    </m:mfrac>

   </m:mrow>
  </m:mfrac>
  <m:mo>=</m:mo><m:mfrac>
   <m:mrow>
    <m:mn>121</m:mn>
   </m:mrow>
   <m:mn>9</m:mn>
  </m:mfrac>
  <m:mo>≈</m:mo><m:mn>13,44</m:mn>
 </m:mrow>
</m:math>
</para>
</solution>
