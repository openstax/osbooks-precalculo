<solution id="fs-id1165135570354"><para id="fs-id1165137629399"> <m:math>
 <m:mrow>
  <m:mi>P</m:mi><m:mrow><m:mo>(</m:mo>
   <m:mi>t</m:mi>
  <m:mo>)</m:mo></m:mrow><m:mo>=</m:mo><m:mn>75</m:mn><m:mo>,</m:mo><m:mn>000</m:mn><m:mo>+</m:mo><m:mn>2,500</m:mn><m:mi>t</m:mi>
 </m:mrow>
</m:math> </para></solution>
</exercise>

