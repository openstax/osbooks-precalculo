   <m:mi>t</m:mi>
  <m:mo>)</m:mo></m:mrow><m:mo>=</m:mo><m:mn>0,</m:mn><m:mtext>5</m:mtext><m:mi>t</m:mi><m:mo>+</m:mo><m:mtext>7</m:mtext><m:mo>.</m:mo><m:mtext>5</m:mtext>
