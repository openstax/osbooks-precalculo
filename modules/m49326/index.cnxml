   <m:mi>t</m:mi>
  <m:mo>)</m:mo></m:mrow><m:mo>=</m:mo><m:mn>12</m:mn><m:mo>,</m:mo><m:mn>025</m:mn><m:mo>−</m:mo><m:mn>205</m:mn><m:mi>t</m:mi>
 </m:mrow>
